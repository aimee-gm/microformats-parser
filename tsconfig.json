{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2019.array", "DOM"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./parser/dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["parser/src"]
}
